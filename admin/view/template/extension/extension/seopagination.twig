{{ header }} {{ column_left }}
<div id="content"><link type="text/css" href="view/stylesheet/stylesheet2.css" rel="stylesheet" media="screen" />
<div class="breadcrumb">
  {% for breadcrumb in breadcrumbs %}
  {{ breadcrumb.separator }} <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }} </a>
   {% endfor %}
</div>
{% if error_warning %}
<div class="warning">{{ error_warning }} </div>
{% endif %}
{% if success %}
  <div class="success">{{ success }} </div>
  {% endif %}
<div class="box">
  <div class="heading">
    <h1><img src="view/image/module.png" alt="" /> {{ heading_title }} </h1>
    <div class="buttons"><a onclick="$('#form').submit();" class="button">{{ button_save }} </a><a onclick="location = '{{ cancel }}';" class="button">{{ button_cancel }} </a></div>
  </div>
  <div class="content">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form">

      <table id="module" class="list">
        <thead>
          <tr>
            <td class="left">Özellik</td>
            <td class="left">Durum</td>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td class="left">SEO Sayfalandırmasını kullanın (ör., opencartuzman.com/category/<b>page/3</b>)</td>
           	<td class="left">
				{% if seopagination.pagination %}
                <input type="checkbox" name="seopagination[pagination]" value="1" checked="checked" />
                {% else %}
                <input type="checkbox" name="seopagination[pagination]" value="1" />{% endif %}
                 </td>
          </tr>
		  <tr>
            <td class="left">Use rel="prev" or rel="next"<br><br><span class="help">Rel = ”canonical” gibi, yinelenen içerik için güçlü bir ipucu görevi görür, artık sayfalandırılmış bir dizideki bileşen URL'ler arasındaki ilişkiyi belirtmek için rel = ”next” ve rel = ”prev” HTML bağlantı öğelerini kullanabilirsiniz. Web boyunca sayfalandırılmış bir içerik dizisi birçok şekil alabilir - birkaç bileşen sayfasına bölünmüş bir makale veya birkaç sayfaya yayılmış öğeleri içeren bir ürün kategorisi veya bir URL dizisine bölünmüş bir forum başlığı olabilir.<a href="http://googlewebmastercentral.blogspot.ro/2011/09/pagination-with-relnext-and-relprev.html" target="blank">Daha Fazla Bilgi</a></span></a></td>
           	<td class="left">
				{% if seopagination.prevnext %}
                <input type="checkbox" name="seopagination[prevnext]" value="1" checked="checked" />
                {% else %}
                <input type="checkbox" name="seopagination[prevnext]" value="1" /> {% endif %}
                 </td>
          </tr>
        </tbody>


      </table>
    </form>
  </div>
</div>

{{ footer }}
