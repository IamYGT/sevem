<script type="text/javascript">
				function clearseo(data, link){
					if (!confirm('Bunların tümü silinecek; ' + data + '?\n\n Veritabanı yedeği almanız önerilir! \n\n' + data + ' verilerini silmek üzeresiniz!!!')) 
						{
							return false;
						}
						else
						{
							location = link;
						}

					}
				</script>

